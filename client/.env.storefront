# Storefront Client Configuration (Port 5174)
# This configuration is for the invited client storefront

# API URL - Backend server
VITE_API_URL=http://localhost:5000

# Storefront Mode
VITE_MODE=storefront
VITE_APP_NAME=OmniBiz Storefront

# PWA Settings
VITE_ENABLE_PWA=true

# Features
VITE_ENABLE_GUEST_CHECKOUT=true
VITE_ENABLE_APPOINTMENTS=true
VITE_ENABLE_LIVE_CHAT=true

# OAuth (Optional for storefront)
VITE_GOOGLE_CLIENT_ID=
VITE_GITHUB_CLIENT_ID=

# Analytics (Optional)
VITE_ANALYTICS_ID=

# Port Configuration
VITE_PORT=5174
VITE_HMR_PORT=5175
