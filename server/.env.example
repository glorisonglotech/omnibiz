# Environment Configuration
NODE_ENV=development # development | production
PORT=5000

# Database Configuration (Dual Connection Support)
# Primary: MongoDB Atlas (Cloud) - Recommended for production
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/omnibiz

# Fallback: Local MongoDB - For development
MONGO_URI=mongodb://localhost:27017/omnibiz

# Note: Configure both for maximum reliability (Atlas primary, Local fallback)
# - Both configured: Atlas primary, Local fallback (recommended for production)
# - Only MONGODB_URI: Cloud-only operation
# - Only MONGO_URI: Local-only operation


# JWT Secret
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_in_production

# Frontend URLs (for CORS and Socket.IO)
CLIENT_URL=http://localhost:5173
FRONTEND_URL=https://ominbiz-business-solution.netlify.app

# Backend URL
HOST=http://localhost:5000
# Production: https://omnibiz.onrender.com

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_SHORTCODE=your_mpesa_shortcode
MPESA_PASSKEY=your_mpesa_passkey
MPESA_ENVIRONMENT=sandbox # sandbox | production
CALLBACK_URL=http://localhost:5000/api/mpesa/callback
CALLBACK_PATH=/api/mpesa/callback

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@omnibiz.com

# Twilio SMS (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Cloudinary (File Upload)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# AI Configuration (Dual Provider Support)
# Primary: Google Gemini AI - Get key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_API_KEY=your_google_ai_api_key # Legacy support

# Fallback: DeepSeek AI - Get key from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# AI Settings
AI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048 # Legacy support
GEMINI_TEMPERATURE=0.7 # Legacy support

# Note: Configure both for maximum uptime (Gemini primary, DeepSeek fallback)

# Ngrok (Development only)
NGROK_ENABLED=false # true | false
NGROK_AUTH_TOKEN=your_ngrok_auth_token

# Session Secret
SESSION_SECRET=your_session_secret_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info # error | warn | info | debug

# Security
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,https://ominbiz-business-solution.netlify.app
